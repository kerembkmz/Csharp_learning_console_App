#See https://aka.ms/containerfastmode to understand how Visual Studio uses this Dockerfile to build your images for faster debugging.

FROM mcr.microsoft.com/dotnet/aspnet:7.0 AS base
WORKDIR /app
EXPOSE 80
EXPOSE 443

FROM mcr.microsoft.com/dotnet/sdk:7.0 AS build
WORKDIR /src
COPY ["openWeatherP_openWeatherAPI.csproj", "."]
RUN dotnet restore "./openWeatherP_openWeatherAPI.csproj"
COPY . .
WORKDIR "/src/."
RUN dotnet build "openWeatherP_openWeatherAPI.csproj" -c Release -o /app/build

FROM build AS publish
RUN dotnet publish "openWeatherP_openWeatherAPI.csproj" -c Release -o /app/publish /p:UseAppHost=false

FROM base AS final
WORKDIR /app
COPY --from=publish /app/publish .
ENTRYPOINT ["dotnet", "openWeatherP_openWeatherAPI.dll"]
